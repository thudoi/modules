    list-style: none;
    float: left;
    width: 50%;
  }

  .list-answer li {
    margin: 0px 0px 0px 0px;
    padding: 0px 0px 0px 35px;
    list-style: none;
    float: left;
    width: 50%;
  }

  .list-answer li span {
    display: inline-block;
    width: 30px;
    height: 30px;
    margin: -3px 0px 0px -40px;
    float: left;
    text-align: center;
    line-height: 30px;
    font-size: 14px;
    color: #000;
    font-weight: 700;
    font-family: "Montserrat", sans-serif;
    border-radius: 50%;
    background: none;
  }
</style>

