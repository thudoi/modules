<p>{{ 'Listening Practice'|t }}</p>
<div class="header" style="text-align: center; margin-bottom: 20px; margin-top: 20px;">
  <h2>{{ node.field_title_ui.value }}</h2>
</div>
<div class="audio" style="margin-top: 20px;margin-bottom: 20px">
  <p>{{ 'AUDIO - open this URL to listen to the audio:'|t }}</p>
  <div class="link">
    <a style="font-weight: bold" href="{{ url }}">{{ url }}</a>
  </div>
</div>
<div class="question" style="width: 600px">

  {% for sec in secs %}
    {% for question in sec.questions %}
      <div class="question question-{{ loop.index }}">{{ question.content|raw }}</div>
    {% endfor %}
    {#</div>#}

  {% endfor %}
</div>
<div id="solution" style="page-break-before: always;">
  <div class="box-caption box-caption-margin">
    <p><span class="bc-icon icon-lego"></span> {{ 'Solution:'|t }} </p>
  </div>
  {{ score_table }}
</div>
<div style="page-break-before: always">
  <div class="box-caption box-caption-margin">
    <p><span class="bc-icon icon-lego"></span> {{ 'Audio Script:'|t }} </p>
  </div>
  {% for sec in secs %}
    <h2 class="subtitle"> {{ sec.section.field_subtitle_section.value|raw }}</h2>
    <div class="passage-content"> {{ sec.section.field_audio_sc.value|raw }}</div>
  {% endfor %}
</div>
