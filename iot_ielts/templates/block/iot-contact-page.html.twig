<div class="contact-box">
  <div class="error-message main"></div>
  <form id="contact-form-page" method="post" enctype="multipart/form-data">
    <i class="ion-android-close close-modal" data-dismiss="modal" aria-label="Close">
    </i>
    <div class="section-caption">
      <span>{{ 'Contact us'|t }}</span>
    </div>
    <div class="contact-field">
      <input type="text" required name="name" class="contact-name" placeholder="{{ 'Name'|t }}">
      <div class="error-message contact-name"></div>
    </div>
    <div class="contact-field">
      <input type="email" required class="contact-email" placeholder="{{ 'Email'|t }}">
      <div class="error-message contact-email"></div>
    </div>
    <div class="contact-field">
      <input type="text" required class="contact-title" placeholder="{{ 'Title'|t }}">
      <div class="error-message contact-title"></div>
    </div>
    <div class="contact-field">
      <textarea class="contact-message" required placeholder="{{ 'Message'|t }}"></textarea>
      <div class="error-message contact-message"></div>
    </div>
    <div class="contact-field">
      <button type="submit">{{ 'Send'|t }}</button>
      <img class="preload" src="/themes/iot/images/preloader.gif" width="50" height="50"/>
    </div>
  </form>
</div>
<div class="modal fade" id="modal-contact" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-auto modal-profile">
    <div class="">
      <i class="ion-android-close close-modal" data-dismiss="modal" aria-label="Close"></i>
      <h2 class="modal-caption">{{ 'Thank you'|t }}</h2>
      <div class="login-box">
        <p style="text-align: center"> {{ 'Thank you for contacting us, we will get back within 48 hours.'|t }}</p>
      </div>

    </div>
  </div>
</div>
