<!-- Add you custom twig html here -->
<!--section-->
{% if nodes %}
  <section class="section">
    <div class="container">
      <div class="section-caption">
        <span>{{ 'Number #1 for IELTS Preparation'|t }}</span>
      </div>
      <div class="row">
        {% for node in nodes %}
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="fact-item">
              <div class="fact-icon">
                <img alt="" src="{{ file_url(node.field_image.0.entity.uri.value) }}">
              </div>
              <p>{{ node.field_static_number.value }}</p>
              <span>{{ node.title.value }}</span>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
