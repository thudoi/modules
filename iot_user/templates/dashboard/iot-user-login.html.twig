<div class="modal-auto modal-profile">
  <div class="">
    <i class="ion-android-close close-modal" data-dismiss="modal" aria-label="Close">
    </i>
    <h2 class="modal-caption">
      {{ 'Log in to your account'|t }}
    </h2>
    <div class="login-box account">
      <div class="error-message main"></div>
      <div class="login-left">
        <form id="user-login" method="post">
          <div class="login-feild">
            <p>{{ 'Username or Email'|t }}</p>
            <div class="text-feild">
              <i class="fa fa-user"></i>
              <input type="text" required class="email" name="name"/>
              <div class="error-message email"></div>
            </div>
          </div>
          <div class="login-feild">
            <p>{{ 'Password'|t }}</p>
            <div class="text-feild">
              <i class="fa fa-lock"></i>
              <input type="password" required class="password" name="pass"/>
              <div class="error-message password"></div>
            </div>
          </div>
          <button type="submit" class="btn-login">
            {{ 'Login'|t }}
          </button>
          <input type="hidden" value="{{ destination }}" class="destination"/>
          <input type="hidden" value="{{ submit }}" class="submit-test"/>
        </form>
        <div class="remember">
          <label>
            <input type="checkbox" class="remember" name="remember"/>
            <span>{{ 'Remember'|t }} ?</span>
          </label>
          <a href="/user/password">{{ 'Forgot password'|t }}</a>
          <div class="clearfix"></div>
        </div>
      </div>
      <div class="login-line">
        <span>{{ 'Or'|t }}</span>
      </div>
      <div class="login-right">
        <a href="/user/login/google?destination={{ destination }}">
          <i class="fa fa-google"></i>{{ 'Login with Google'|t }}
        </a>
        <a href="/user/login/facebook?destination={{ destination }}" class="facebook">
          <i class="fa fa-facebook-f"></i>{{ 'Login with Facebook'|t }}
        </a>
        <a href="/user/login/twitter?destination={{ destination }}" class="twitter">
          <i class="fa fa-twitter"></i>{{ 'Login with Twitter'|t }}
        </a>
        {#<a href="/user/login/weibo" class="weibo">#}
        {#<i class="fa fa-weibo"></i>Login with Weibo#}
        {#</a>#}
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="create-acc-link">
      {{ '<p>Don\'t have an account? <a class="use-ajax" data-dialog-type="modal" href="/account/register?destination={{ destination }}">Create one
                    now!</a></p>'|t }}


    </div>


  </div>
</div>
